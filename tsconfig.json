{
  "compilerOptions": {"sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "baseUrl": "./",
    "resolveJsonModule": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "react": [
        "node_modules/preact/compat"
      ],
      "react-dom": [
        "node_modules/preact/compat"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./**/*.tsx",
    "./**/*.ts",
    "./**/*.d.ts"
  ]
}
